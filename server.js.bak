const express = require('express');
const http = require('http');
const { Server } = require('socket.io');

const app = express();
const server = http.createServer(app);
const io = require("socket.io")(server, {
    cors: {
        origin: "http://172.16.24.170", // Replace with your site origin
        methods: ["GET", "POST"]
    }
});

app.use(express.static(__dirname)); // Serve static files like styles or images

// Serve the chat page
app.get('/', (req, res) => {
    res.sendFile(__dirname + '/index.html'); // Serve the HTML file (update as needed)
});

// Handle chat messages and usernames
io.on('connection', (socket) => {
    console.log('A user connected');

    socket.on('set username', (username) => {
        socket.username = username || "Anonymous";
    });

    socket.on('chat message', (message) => {
        const prefix = socket.username || "Anonymous";
        console.log(`${prefix}: ${message}`);
        io.emit('chat message', { prefix, message });
    });

    socket.on('disconnect', () => {
        console.log('A user disconnected');
    });
});

// Start the server
const PORT = 3000;
server.listen(PORT, () => {
    console.log(`Chat server running on http://localhost:${PORT}`);
});
